programa {
	funcao inicio() {
		real soma = 0.0, numero
		inteiro contador = 0

		escreva("Digite um numero positivo: ")
		leia(numero)
		
		enquanto(numero >= 0){ 
			soma += numero
			contador++
			escreva("Digite um numero positivo: ")
			leia(numero)	
		}

		escreva("A soma total: ", soma,	" a média é ", soma / contador, " o total de numero é:", contador, ".")

	}
}
